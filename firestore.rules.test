rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // REGOLE SEMPLIFICATE PER TEST
    // ATTENZIONE: Queste regole permettono accesso completo agli utenti autenticati
    // Usa solo per test, non per produzione!
    
    // Permette accesso completo a tutti i documenti per utenti autenticati
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regole specifiche per dispositivi FCM
    match /users/{userId}/devices/{deviceId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 